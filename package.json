{
  "name": "gruntfile-gtx",
  "version": "0.3.0",
  "description": "Turbo, spoilers and a sunroof for your Gruntfile",
  "author": {
    "name": "Bart van der Schoor",
    "url": "https://github.com/Bartvds"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bartvds/gruntfile-gtx.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bartvds/gruntfile-gtx/issues"
  },
  "keywords": [
    "grunt",
    "gruntfile",
    "script",
    "macro",
    "tasks",
    "alias",
    "generator"
  ],
  "main": "lib/gtx.js",
  "engines": {
    "node": ">= 0.10",
    "npm": ">= 2.15"
  },
  "nyc": {
    "all": true,
    "include": [
      "lib/*.js",
      "tasks/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "Gruntfile.js"
    ]
  },
  "scripts": {
    "test": "grunt test",
    "cover": "nyc --reporter=html --reporter=text grunt test",
    "coveralls": "npm run cover && nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "grunt-concurrent": "^2.3.1",
    "load-grunt-tasks": "^3.5.2"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-fs": "^1.0.0",
    "coveralls": "^2.13.1",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-mocha-test": "^0.13.2",
    "grunt-run-grunt": "Bartvds/grunt-run-grunt#master",
    "grunt-wait": "Bartvds/grunt-wait#master",
    "jshint-path-reporter": "^0.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.5.0",
    "mocha-unfunk-reporter": "^0.4.0",
    "nyc": "^11.1.0",
    "underscore": "^1.8.3"
  },
  "peerDependencies": {
    "grunt": ">=0.4.0"
  }
}
